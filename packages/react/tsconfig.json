{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./es",
    "declarationDir": "./es",
    "rootDir": "./src",
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node", "vitest/globals"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}

